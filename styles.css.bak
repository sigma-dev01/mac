body {
    font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    background-color: #f5f5f5;
    margin: 0;
    padding: 20px;
}

.container {
    max-width: 800px;
    margin: 0 auto;
}

h1 {
    color: #333;
    text-align: center;
    margin-bottom: 30px;
}

h2 {
    color: #444;
    margin-top: 0;
    border-bottom: 1px solid #eee;
    padding-bottom: 10px;
}

button {
    background-color: #4CAF50;
    color: white;
    border: none;
    padding: 10px 15px;
    border-radius: 4px;
    cursor: pointer;
    font-size: 14px;
    margin-bottom: 15px;
    margin-right: 10px;
}

button:hover {
    background-color: #45a049;
}

.primary-btn {
    background-color: #2196F3;
}

.primary-btn:hover {
    background-color: #0b7dda;
}

.button-container {
    display: flex;
    justify-content: center;
    gap: 10px;
    margin-bottom: 10px;
}

/* Webhook info */
.webhook-info {
    text-align: center;
    margin-bottom: 20px;
    color: #4a76a8;
    font-size: 14px;
    background-color: #e8f0fe;
    padding: 5px;
    border-radius: 4px;
    display: flex;
    justify-content: center;
    align-items: center;
}

.webhook-icon {
    margin-right: 5px;
    font-size: 16px;
}

.actions {
    display: flex;
    gap: 10px;
    margin-bottom: 10px;
}

#log-display {
    background-color: #f9f9f9;
    border: 1px solid #ddd;
    border-radius: 4px;
    padding: 10px;
    max-height: 300px;
    overflow-y: auto;
}

pre {
    margin: 0;
    white-space: pre-wrap;
    font-size: 13px;
}

.info-row {
    display: flex;
    margin-bottom: 8px;
}

.info-label {
    font-weight: bold;
    width: 150px;
}

.info-value {
    flex: 1;
}

.error {
    color: #d32f2f;
    font-style: italic;
}

.success {
    color: #388e3c;
}

.interface-item {
    background-color: #f9f9f9;
    border: 1px solid #ddd;
    border-radius: 4px;
    padding: 10px;
    margin-bottom: 10px;
}

.log-entry {
    padding: 8px;
    border-bottom: 1px solid #eee;
}

.log-entry:last-child {
    border-bottom: none;
}

.log-time {
    font-size: 12px;
    color: #666;
    margin-right: 10px;
}

/* Modal styles */
.modal {
    display: none;
    position: fixed;
    z-index: 1;
    left: 0;
    top: 0;
    width: 100%;
    height: 100%;
    overflow: auto;
    background-color: rgba(0, 0, 0, 0.4);
}

.modal-content {
    background-color: #fefefe;
    margin: 10% auto;
    padding: 20px;
    border: 1px solid #888;
    width: 80%;
    max-width: 800px;
    border-radius: 8px;
    box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
}

.close {
    color: #aaa;
    float: right;
    font-size: 28px;
    font-weight: bold;
    cursor: pointer;
}

.close:hover,
.close:focus {
    color: black;
    text-decoration: none;
}

#logs-list {
    margin-bottom: 20px;
    max-height: 200px;
    overflow-y: auto;
}

.software-list table, .port-scan-results table {
    width: 100%;
    border-collapse: collapse;
}

.software-list th, .software-list td,
.port-scan-results th, .port-scan-results td {
    text-align: left;
    padding: 8px;
    border-bottom: 1px solid #ddd;
}

.software-list th, .port-scan-results th {
    background-color: #f2f2f2;
}

.port-scan-results .port-open {
    color: #d9534f;
    font-weight: bold;
}

.port-scan-results .port-group {
    margin-bottom: 20px;
}

.port-scan-results h3 {
    margin-top: 10px;
    margin-bottom: 5px;
    color: #337ab7;
    border-bottom: 1px solid #eee;
    padding-bottom: 5px;
}

.log-file-item {
    padding: 8px;
    cursor: pointer;
    border-bottom: 1px solid #eee;
}

.log-file-item:hover {
    background-color: #f0f0f0;
}

#log-details {
    background-color: #f9f9f9;
    border: 1px solid #ddd;
    border-radius: 4px;
    padding: 10px;
    max-height: 400px;
    overflow-y: auto;
}

.loading {
    text-align: center;
    padding: 20px;
    font-style: italic;
    color: #666;
}
